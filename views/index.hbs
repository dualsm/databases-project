<!-- index.hbs -->
<h1> Home </h1>

<h2> Please navigate to a page to modify the database </h2>

{{!-- Create a table --}}
<table>

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr>
            <td>{{this.emp_id}}</td>
            <td>{{this.emp_name}}</td>
            <td>{{this.dep_id}}</td>
            <td>{{this.hire_date}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>