<h2> Assign a Job </h2>
<form action="/addRelation" method="POST">
    <fieldset class="fields" style="width:50%">
        <label> Employee ID</label> 
        <select id="employeeIdInput" name="employeeIdInput" required>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="10">10</option>
        </select>
        <br />
        <label> Job ID</label> 
        <select id="jobIdInput" name="jobIdInput" required>
            <option value="1">2</option>
            <option value="2">3</option>
            <option value="10">4</option>
        </select>
        <br />
    </fieldset>
    <input class="btn" type="submit" id="addAssignment" value="Add Assignment">
    <input class="btn" type="button" value="Cancel">
</form> 

<h2> Remove Assignments </h2>
<form action="/removeRelation" method="POST">
    <fieldset class="fields" style="width:50%">
        <label> ID Selection </label> 
        <select id="emp_to_job_idInput" name="emp_to_job_idInput" required>
