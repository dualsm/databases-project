<!-- employees.hbs -->
<h1> Employees </h1>
<p>Note: Delete button works, but you must refresh the page to view the updated table.</p>
{{!-- create the table --}}
<table id="employees-table" >
    <caption> Employees Table </caption>
    <thead>
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>delete</th>
        </tr>
    </thead>

    <tbody>
        {{#each data}}
        <tr>
            <td>{{this.emp_id}}</td>
            <td>{{this.emp_name}}</td>
            <td>{{this.hire_date}}</td>
            <td><button onclick="deleteEmployee({{this.emp_id}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/deleteEmployee.js"></script>

